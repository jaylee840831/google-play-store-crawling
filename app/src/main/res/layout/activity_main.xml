<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/open_security"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginLeft="40dp"
        android:contentDescription="left_click"

        android:onClick="open_security"
        android:text="開啟協助工具服務"
        app:layout_constraintBaseline_toBaselineOf="@+id/open_float"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/open_float"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="212dp"
        android:layout_marginLeft="212dp"
        android:layout_marginTop="204dp"
        android:contentDescription="left_click"
        android:onClick="open_float"
        android:text="開啟懸浮視窗授權"
        app:layout_constraintStart_toStartOf="@+id/open_security"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="84dp"
        android:layout_marginLeft="84dp"
        android:layout_marginTop="136dp"
        android:text="google play商店資料爬蟲"
        android:textSize="24dp"
        app:layout_constraintStart_toStartOf="@+id/open_security"
        app:layout_constraintTop_toTopOf="@+id/open_security" />
</androidx.constraintlayout.widget.ConstraintLayout>